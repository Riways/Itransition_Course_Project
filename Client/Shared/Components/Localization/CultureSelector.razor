@using System.Globalization
@inject IJSRuntime JS
@inject NavigationManager Navigation
@*
<p>
    <label>
        Select your locale:
        <select @bind="Culture">
            @foreach (var culture in supportedCultures)
            {
                <option value="@culture">@culture.DisplayName</option>
            }
        </select>
    </label>
</p>*@

<MudSelect Class="d-flex flex-none" Variant="Variant.Outlined" T="CultureInfo" @bind-Value="Culture"   AnchorOrigin="Origin.BottomCenter">
    @foreach (var culture in supportedCultures)
    {
        <MudSelectItem   Value="culture">@culture.TwoLetterISOLanguageName.ToUpper()</MudSelectItem>
    }
</MudSelect>

@code
{
    private CultureInfo[] supportedCultures = new[]
    {
        new CultureInfo("en-US"),
        new CultureInfo("ru-RU"),
    };

    private CultureInfo Culture
    {
        get => CultureInfo.CurrentCulture;
        set
        {
            if (CultureInfo.CurrentCulture != value)
            {
                var js = (IJSInProcessRuntime)JS;
                js.InvokeVoid("blazorCulture.set", value.Name);

                Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
            }
        }
    }
}