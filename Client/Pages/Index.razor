@page "/"
@using totten_romatoes.Client.Shared.Components.Reviews
@using totten_romatoes.Client.Shared.Components.Tags
@using totten_romatoes.Client.Shared.Components
@using System.Globalization

<PageTitle>@_loc["Home"]</PageTitle>

<MudContainer Class="mt-1" MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">@_loc["Reviews"]</MudText>
    <MudGrid Spacing="6" Class="mt-1" Justify="Justify.Center">
        <MudItem xs="12" lg="9">
            <Reviews/>
        </MudItem>
        <MudHidden Breakpoint="Breakpoint.MdAndDown"  >
            <MudItem  lg="3">
                <TagCloud/>
            </MudItem>
        </MudHidden>
    </MudGrid>
</MudContainer>

@code{
    [Inject]
    private IStringLocalizer<Index> _loc { get; set; }
}


